<%- include('../port/layout-start') %>
<%- include('../port/menu') %>

<h1><%= title %></h1>
<ul>
  <% users.forEach(user => { %>
    <li><%= user.name %> (<%= user.email %>) 
      <a href="/user/update/<%= user.id %>">Edit</a> 
      <form action="/user/delete/<%= user.id %>" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% }) %>
</ul>
<a href="/user/create">Create new user</a>

<%- include('../port/layout-end') %>
