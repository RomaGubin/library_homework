<div class="form-group">
  <label for="inputTitle">Заголовок</label>
  <input type="text"
         value="<%= book ? book.title : '' %>"
         name="title"
         class="form-control"
         id="inputTitle">
</div>
<div class="form-group">
  <label for="inputDescription">Описание</label>
  <textarea name="description" class="form-control" id="inputDescription"><%= book ? book.description : '' %></textarea>
</div>
<div class="form-group">
  <label for="inputAuthors">Авторы</label>
  <input type="text"
         value="<%= book ? book.authors : '' %>"
         name="authors"
         class="form-control"
         id="inputAuthors">
</div>
<div class="form-group">
  <label for="inputFavorite">Избранное</label>
  <input type="checkbox"
         name="favorite"
         class="form-control"
         id="inputFavorite"
         <%= book && book.favorite ? 'checked' : '' %>>
</div>
<div class="form-group">
  <label for="inputFile">Файл книги</label>
  <input type="file"
         name="file"
         class="form-control"
         id="inputFile">
</div>
